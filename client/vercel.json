{
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "framework": "nextjs",
  "functions": {
    "app/[lang]/pokemon/[id]/page.tsx": {
      "maxDuration": 30
    },
    "app/[lang]/page.tsx": {
      "maxDuration": 30
    },
    "app/api/[lang]/pokemon/[id]/route.ts": {
      "maxDuration": 30
    }
  },
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next",
      "config": {
        "maxLambdaSize": "50mb"
      }
    }
  ],
  "env": {
    "NEXT_PUBLIC_GRAPHQL_URL": "@pokemon-graphql-url",
    "NODE_OPTIONS": "--max-old-space-size=8192"
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    },
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, s-maxage=3600, stale-while-revalidate=86400"
        }
      ]
    }
  ],
  "github": {
    "silent": true
  }
}
